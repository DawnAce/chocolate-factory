{
  "type": "frontend",
  "name": "Tag",
  "tagName": "<el-tag>",
  "description": "一种用于识别、分类或描述内容的短文本片段，它们在许多用户界面中都有广泛的应用，如文章标签、产品分类、搜索筛选等。",
  "properties": [
    {
      "parameter": "type",
      "description": "类型",
      "type": "string",
      "optionalValue": "success/info/warning/danger",
      "defaultValue": "—"
    },
    {
      "parameter": "closable",
      "description": "是否可关闭",
      "type": "boolean",
      "optionalValue": "—",
      "defaultValue": "false"
    },
    {
      "parameter": "disable-transitions",
      "description": "是否禁用渐变动画",
      "type": "boolean",
      "optionalValue": "—",
      "defaultValue": "false"
    },
    {
      "parameter": "hit",
      "description": "是否有边框描边",
      "type": "boolean",
      "optionalValue": "—",
      "defaultValue": "false"
    },
    {
      "parameter": "color",
      "description": "背景色",
      "type": "string",
      "optionalValue": "—",
      "defaultValue": "—"
    },
    {
      "parameter": "size",
      "description": "尺寸",
      "type": "string",
      "optionalValue": "medium / small / mini",
      "defaultValue": "—"
    },
    {
      "parameter": "effect",
      "description": "主题",
      "type": "string",
      "optionalValue": "dark / light / plain",
      "defaultValue": "light"
    }
  ],
  "events": [
    {
      "eventName": "click",
      "description": "点击 Tag 时触发的事件",
      "callbackParameter": "—"
    },
    {
      "eventName": "close",
      "description": "关闭 Tag 时触发的事件",
      "callbackParameter": "—"
    }
  ],
  "examples": [
    {
      "question": "常规标签",
      "answer": "<el-tag type=\"success\">标签二</el-tag>"
    },
    {
      "question": "可移除标签",
      "answer": "<el-tag\n  v-for=\"tag in tags\"\n  :key=\"tag.name\"\n  closable\n  :type=\"tag.type\">\n  {{tag.name}}\n</el-tag>\n"
    }
  ]
}